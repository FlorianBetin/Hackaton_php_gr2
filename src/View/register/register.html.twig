{% extends 'layout.html.twig' %}


{% block content %}

	{% for error in errors %}

		<p>{{error}}</p>

	{% endfor %}
	<main class="connect">
		<section class="container-connect">
			<h1 class="text-center">Rejoignez-nous !</h1>
			<form class="row justify-content-around" method="post">
				<div class="div-two mb-3 d-flex justify-content-center">
					<label for="firstName">Votre prénom :
					</label>
					<input type="text" name="firstName" id="firstName" placeholder="Votre prénom" required>
				</div>
				<div class="div-two mb-3 d-flex justify-content-center">
					<label for="lastName">Votre nom de famille :
					</label>
					<input type="text" name="lastName" id="lastName" placeholder="Votre nom de famille" required>
				</div>
				<div class="div-two mb-3 d-flex justify-content-center">
					<label for="e_mail">Votre email :
					</label>
					<input type="e_mail" name="e_mail" id="e_mail" placeholder="Votre email" required>
				</div>
				<div class="div-two mb-3 d-flex justify-content-center">
					<input class="btn" type="submit" value="Je m'enregistre !">
				</div>
			</form>
		</section>
	</main>


{% endblock %}
